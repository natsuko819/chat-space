.side_bar
  .side_bar__box
    .side_bar__box__menu
      .side_bar__box__menu__user-name
        = current_user.name
      .side_bar__box__menu__icon
        .side_bar__box__menu__icon__new-group
        =link_to new_group_path do
          = icon('far', 'edit', class: 'contents__btn')
        .side_bar__box__menu__icon__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'contents__btn')
  .side_bar__group-list
    - current_user.groups.each do |group|
      .side_bar__group-list__group
        = link_to group_messages_path(group) do
          .side_bar__group-list__group__name
            = group.name
          .side_bar__group-list__group__lastest-message
            = group.show_last_message