.main_chat
  .main_chat__group-info
    .main_chat__group-info__left-box
      .main_chat__group-info__left-box__current-group
        = @group.name
      .main_chat__group-info__left-box__member-list
        Member :
        .main_chat__group-info__left-box__member-list__member
          - @group.users.each do |user|
            = user.name
    .main_chat__group-info__edit-btn
      = link_to edit_group_path(current_user),class:"main_chat__group-info__edit-btn__btn" do
        Edit
  .main_chat__message-list
    = render @messages
  .main_chat__message-form
    .main_chat__message-form__new-message
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'main_chat__message-form__new-message__text', placeholder: 'type a message'
        = f.label :image, class: 'main_chat__message-form__new-message__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'main_chat__message-form__new-message__image__file'
        = f.submit 'Send', class: 'main_chat__message-form__new-message__submit-btn'