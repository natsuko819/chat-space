.main_chat
  .main_chat__group-info
    .main_chat__group-info__left-box
      .main_chat__group-info__left-box__current-group
        = @group.name
      .main_chat__group-info__left-box__member-list
        Member :
        .main_chat__group-info__left-box__member-list__member
          = @group.users
    .main_chat__group-info__edit-btn
      = link_to edit_group_path(current_user) do
        Edit
  .main_chat__message-list
    = render @messages
    .main_chat__message-list__message
      .main_chat__message-list__message__upper-info
        .main_chat__message-list__message__upper-info__talker
        .main_chat__message-list__message__upper-info__date
      .main_chat__message-list__message__text
  .main_chat__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'main_chat__message-form__new-message', placeholder: 'type a message'
      .main_chat__message-form__new-message__input-box
        .main_chat__message-form__new-message__input-box__text
        = f.label :image, class: 'main_chat__message-form__new-message__input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'main_chat__message-form__new-message__input-box__image__file'
      = f.submit 'Send', class: 'main_chat__message-form__new-message__submit-btn'